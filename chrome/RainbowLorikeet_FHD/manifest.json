{
  "manifest_version": 3,
  "name": "Rainbow Lorikeet",
  "version": "1.0",
  "description": "A vibrant Chrome theme inspired by the dazzling colors of the Rainbow Lorikeet, a spectacular nectar-feeding parrot native to Australia.",
  "theme": {
    "images": {
      "theme_ntp_background": "theme_ntp_background.jpg"
    },
    "colors": {
      "frame": [0, 90, 210],
      "frame_inactive": [30, 70, 150],
      "ntp_background": [10, 80, 180],
      "tab_background_text": [150, 200, 255],
      "tab_text": [240, 250, 255],
      "bookmark_text": [240, 250, 255],
      "ntp_text": [240, 250, 255],
      "ntp_link": [120, 255, 180],
      "ntp_header": [50, 150, 230],
      "toolbar": [240, 80, 35],
      "toolbar_text": [255, 255, 255],
      "toolbar_button_icon": [255, 240, 200],
      "omnibox_text": [20, 30, 60],
      "omnibox_background": [255, 220, 120]
    },
    "tints": {
      "buttons": [0.9, 0.5, 0.5]
    },
    "properties": {
      "ntp_background_alignment": "center",
      "ntp_background_repeat": "no-repeat"
    }
  }
}